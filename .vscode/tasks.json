{
    "version": "0.2.0",
    "tasks": [
        {
            "label": "DEBUG",
            "command": "g++",
            "windows": {
                "args": [
                    "-g",
                    "-O0",
                    "${file}",
                    "-o",
                    "bin/${fileBasenameNoExtension}.out",
                    "-Wall",
                    "-std=c++11",
                    "-D_FORTIFY_SOURCE=2",
                    "-fstack-protector-all",
                    "-Wl,-stack=1073741824"
                ]
            },
            "linux": {
                "args": [
                    "-g",
                    "-O0",
                    "${file}",
                    "-o",
                    "bin/${fileBasenameNoExtension}.out",
                    "-Wall",
                    "-std=c++11",
                    "-D_FORTIFY_SOURCE=2",
                    "-fstack-protector-all",
                    "-fsanitize=address"
                ]
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "RELEASE",
            "command": "g++",
            "args": [
                "-O3",
                "${file}",
                "-o",
                "bin/${fileBasenameNoExtension}.out",
                "-Wall",
                "-std=c++11"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}
